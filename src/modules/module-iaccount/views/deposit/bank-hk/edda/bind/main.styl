@import '~assets/stylus/variable.styl'
@import '~assets/stylus/mixin.styl'


.content
  background-color #fff
  .content-inner
    padding 40px 30px 0
    li
      .form-label
        height:40px;
        font-size:28px;
        font-family:PingFangSC-Regular,PingFang SC;
        font-weight:400;
        color:rgba(51,51,51,1);
        line-height:40px;
      .form-filed 
        height:40px;
        font-size:28px;
        font-family:PingFangSC-Regular,PingFang SC;
        font-weight:400;
        color:rgba(51,51,51,1);
        line-height:40px;
        padding-top 20px
        padding-bottom 30px
        border-x(bottom)
      .filed-flex
        flex-box()
        .bank_code
          padding-right 64px
      .form-select
        position relative
        i
          position absolute
          right 0
          font-size: 40px
      .tips
        height:34px;
        font-size:24px;
        font-family:PingFangSC-Regular,PingFang SC;
        font-weight:400;
        color:rgba(241,91,90,1);
        line-height:34px;
        padding-top 10px
    li:nth-child(n + 2)
      padding-top 30px
  .agreement
    display: flex
    align-items: center
    padding-left 30px
    padding-top 10px
    padding-bottom 30px
    height 34px
    .default-icon
      display: inline-block
      bg-image('oval-default-icon')
    .active-icon
      display: inline-block
      bg-image('oval-active-icon')
    .act
      font-size: 24px
      color: #8C8EA0
      padding-left 4px
    .agr
      font-size: 24px
      color: #FC724C
  .btn
    flex-box($row: center, $col: center)
    width:690px;
    height:92px;
    color: #FFFFFF
    border-radius:46px;
    margin 60px auto 10px auto
  .active-btn-color
    background-color: #FC724C
  .default-btn-color
    background-color: #E1E2E9
.warn
  width:690px;
  height:170px;
  font-size:24px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(140,142,160,1);
  line-height:34px;
  padding 0 30px
.error
  width:750px;
  height:68px;
  line-height 68px
  background:rgba(241,91,90,1);
  span 
    color: #FFFFFF
    font-size: 28px
    padding-left 30px
.dialog
  .title
    text-align: center
    font-size: 34px
  & > div
    padding-top 30px
.agr-list
  height 890px
  overflow: scroll
  -webkit-overflow-scrolling: touch
